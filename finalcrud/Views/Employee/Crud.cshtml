@model finalcrud.Models.Employee
@{
    ViewBag.Title = "Crud";
    var msglist = ViewData["List"] as List<finalcrud.Models.Employee>;
}
 @Html.ActionLink("Logout", "Logout", "Account", new { area = "" }, new { @class = "navbar-brand" })
<h2>Add Employee</h2>
@Html.Partial("CrudPartialView")

<h2>Employee Details</h2>

<table class="table table-drak">
    <tr>
       <th>Employee Name </th>
       <th>Email </th>
       <th>Gender</th>
       <th>Join date</th>
       <th>Salary</th>
       <th>Department</th>
       <th>Photo </th>
    </tr>
    @foreach(var item in msglist)
    {
<tr>
    <td>@item.EmpName</td>
    <td>@item.Email</td>
    <td>@item.Gender</td>
    <td>@item.Joindate</td>
    <td>@item.Salary</td>
    <td>@item.Department.DeptName</td>
    <td><img src="@item.Photo" height="100" width="80"/></td>
    <td><a href="/Employee/Crud?id=@item.EmpID" >Edit</a></td>
    <td><a href="/Employee/Delete?id=@item.EmpID" class="btn-danger">Delete</a></td>
</tr>
    }
</table>




